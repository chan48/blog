{
  "version": "1.3.0",
  "name": "blog",
  "description": "rhostem's blog powered by Gatsby",
  "main": "n/a",
  "scripts": {
    "dev": "gatsby develop",
    "build": "npm run clean && gatsby build && node ampify.js && npm run copy:html",
    "deploy": "npm run build && gh-pages -d public -r \"https://github.com/rhostem/rhostem.github.io.git\" -b \"master\"",
    "serve:build": "npm run build && gatsby serve-build",
    "copy:html": "cp -r html/ public/",
    "clean": "rm -rf public/*",
    "lint": "./node_modules/.bin/eslint --ext .js,.jsx --ignore-pattern public .",
    "test": "jest --watch",
    "flow": "flow"
  },
  "keywords": [
    "gatsby"
  ],
  "browserslist": [
    "> 1%",
    "IE >= 9",
    "last 2 versions"
  ],
  "author": "rhostem",
  "license": "MIT",
  "dependencies": {
    "gatsby": "latest",
    "gatsby-link": "latest",
    "gatsby-plugin-glamor": "latest",
    "gatsby-plugin-google-analytics": "latest",
    "gatsby-plugin-manifest": "latest",
    "gatsby-plugin-offline": "latest",
    "gatsby-plugin-sharp": "latest",
    "gatsby-plugin-styled-components": "^1.0.1",
    "gatsby-source-filesystem": "latest",
    "gatsby-transformer-json": "latest",
    "gatsby-transformer-sharp": "latest",
    "lodash": "^4.16.4",
    "mkdirp": "^0.5.1",
    "prop-types": "^15.5.8",
    "request": "^2.79.0",
    "slug": "^0.9.1",
    "styled-components": "^2.1.1"
  },
  "devDependencies": {
    "caniuse-db": "^1.0.30000702",
    "flow-bin": "^0.50.0"
  },
  "jest": {
    "transform": {
      ".*": "<rootDir>/node_modules/babel-jest"
    },
    "unmockedModulePathPatterns": [
      "react",
      "react-dom",
      "react-addons-test-utils",
      "fbjs",
      "enzyme",
      "chai",
      "lodash",
      "redux",
      "react-redux",
      "react-router"
    ],
    "testEnvironment": "node",
    "setupFiles": [
      "<rootDir>/test/test.setup.js"
    ],
    "roots": [
      "<rootDir>/utils",
      "<rootDir>/components"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/client/test/fileMock.js",
      "\\.(css|less)$": "<rootDir>/client/test/styleMock.js"
    }
  }
}
